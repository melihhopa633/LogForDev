<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LogForDev</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        background: '#09090b',
                        foreground: '#fafafa',
                        card: { DEFAULT: '#09090b', foreground: '#fafafa' },
                        primary: { DEFAULT: '#2563eb', foreground: '#fafafa' },
                        secondary: { DEFAULT: '#27272a', foreground: '#fafafa' },
                        muted: { DEFAULT: '#27272a', foreground: '#a1a1aa' },
                        accent: { DEFAULT: '#27272a', foreground: '#fafafa' },
                        destructive: { DEFAULT: '#ef4444', foreground: '#fafafa' },
                        border: '#27272a',
                        input: '#27272a',
                        ring: '#2563eb',
                    },
                    borderRadius: {
                        lg: '0.5rem',
                        md: 'calc(0.5rem - 2px)',
                        sm: 'calc(0.5rem - 4px)',
                    },
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/css/dashboard.css" />
    <style>
        body { font-feature-settings: "rlig" 1, "calt" 1; }
    </style>
</head>
<body class="bg-background text-foreground min-h-screen flex flex-col antialiased">

    <!-- Navbar -->
    <nav class="sticky top-0 z-50 w-full border-b border-border bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
        <div class="flex h-14 items-center justify-between px-4 md:px-8">
            <a href="/" class="flex items-center gap-2 font-bold text-lg text-foreground hover:opacity-90 transition-opacity">
                <svg class="w-7 h-7 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                    <line x1="16" y1="13" x2="8" y2="13"/>
                    <line x1="16" y1="17" x2="8" y2="17"/>
                    <polyline points="10 9 9 9 8 9"/>
                </svg>
                LogForDev
            </a>

            <!-- Desktop Nav -->
            <div class="hidden md:flex items-center gap-1">
                <a href="/" class="px-3 py-2 text-sm rounded-md transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "bg-secondary text-foreground" : "text-muted-foreground hover:text-foreground hover:bg-secondary/50")">
                    Dashboard
                </a>
                <a href="/Home/AppLogs" class="px-3 py-2 text-sm rounded-md transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "AppLogs" ? "bg-secondary text-foreground" : "text-muted-foreground hover:text-foreground hover:bg-secondary/50")">
                    App Logs
                </a>
                <a href="/Home/Projects" class="px-3 py-2 text-sm rounded-md transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Projects" ? "bg-secondary text-foreground" : "text-muted-foreground hover:text-foreground hover:bg-secondary/50")">
                    Projects
                </a>
                <a href="/Home/Docs" class="px-3 py-2 text-sm rounded-md transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Docs" ? "bg-secondary text-foreground" : "text-muted-foreground hover:text-foreground hover:bg-secondary/50")">
                    Docs
                </a>
                <div class="w-px h-5 bg-border mx-2"></div>
                <a href="https://github.com/melihhopa633/LogForDev" target="_blank" class="p-2 text-muted-foreground hover:text-foreground transition-colors rounded-md hover:bg-secondary/50">
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                </a>
                <a href="https://buymeacoffee.com/melihhopa" target="_blank" class="p-2 text-muted-foreground hover:text-foreground transition-colors rounded-md hover:bg-secondary/50" title="Buy me a coffee">
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 8h1a4 4 0 1 1 0 8h-1"/><path d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z"/><line x1="6" y1="2" x2="6" y2="4"/><line x1="10" y1="2" x2="10" y2="4"/><line x1="14" y1="2" x2="14" y2="4"/>
                    </svg>
                </a>
            </div>

            <!-- Mobile Hamburger -->
            <button class="md:hidden p-2 text-muted-foreground hover:text-foreground transition-colors rounded-md hover:bg-secondary/50" onclick="document.getElementById('mobileMenu').classList.toggle('hidden')">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="4" y1="12" x2="20" y2="12"/><line x1="4" y1="6" x2="20" y2="6"/><line x1="4" y1="18" x2="20" y2="18"/>
                </svg>
            </button>
        </div>

        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden border-t border-border px-4 py-3 space-y-1 bg-background">
            <a href="/" class="block px-3 py-2 text-sm rounded-md transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "bg-secondary text-foreground" : "text-muted-foreground hover:bg-secondary/50")">Dashboard</a>
            <a href="/Home/AppLogs" class="block px-3 py-2 text-sm rounded-md transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "AppLogs" ? "bg-secondary text-foreground" : "text-muted-foreground hover:bg-secondary/50")">App Logs</a>
            <a href="/Home/Projects" class="block px-3 py-2 text-sm rounded-md transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Projects" ? "bg-secondary text-foreground" : "text-muted-foreground hover:bg-secondary/50")">Projects</a>
            <a href="/Home/Docs" class="block px-3 py-2 text-sm rounded-md transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Docs" ? "bg-secondary text-foreground" : "text-muted-foreground hover:bg-secondary/50")">Docs</a>
            <a href="https://github.com/melihhopa633/LogForDev" target="_blank" class="block px-3 py-2 text-sm rounded-md text-muted-foreground hover:bg-secondary/50">GitHub</a>
            <a href="https://buymeacoffee.com/melihhopa" target="_blank" class="block px-3 py-2 text-sm rounded-md text-muted-foreground hover:bg-secondary/50">Buy me a coffee</a>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1 w-full px-4 md:px-8 py-6">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-t border-border py-6 px-4">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-muted-foreground px-4 md:px-8">
            <p>LogForDev &mdash; Open Source Logging System</p>
            <div class="flex items-center gap-4">
                <a href="https://github.com/melihhopa633/LogForDev" target="_blank" class="hover:text-foreground transition-colors">GitHub</a>
                <span class="text-border">|</span>
                <span>MIT License</span>
                <span class="text-border">|</span>
                <span>Made by <a href="https://github.com/melihhopa633" target="_blank" class="hover:text-foreground transition-colors">Melih Hopa</a></span>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
