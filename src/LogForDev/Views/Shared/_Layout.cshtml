<script>
    /**
     * toggleUserMenu()
     * Opens or closes the user dropdown by toggling the "hidden" class.
     * Called by the avatar button's onclick attribute.
     */
    function toggleUserMenu() {
        const dropdown = document.getElementById('userDropdown');
        dropdown.classList.toggle('hidden');
    }

    /**
     * Close the dropdown when the user clicks anywhere outside #userMenu.
     * Uses event delegation on document so no cleanup is needed.
     */
    document.addEventListener('click', function(e) {
        const menu = document.getElementById('userMenu');
        if (menu && !menu.contains(e.target)) {
            document.getElementById('userDropdown')?.classList.add('hidden');
        }
    });

    /**
     * logout()
     * POSTs to the auth API to invalidate the server-side session cookie,
     * then redirects to the login page.
     * The catch block handles network failures by still redirecting —
     * the server will reject the stale cookie on the next visit anyway.
     */
    async function logout() {
        try {
            const res = await fetch('/api/auth/logout', { method: 'POST' });
            if (res.ok) {
                window.location.href = '/login';
            }
        } catch {
            // Even on network error, send the user to login for a consistent UI
            window.location.href = '/login';
        }
    }
</script>

