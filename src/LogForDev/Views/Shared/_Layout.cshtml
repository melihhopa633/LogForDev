<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LogForDev</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        background: '#09090b',
                        foreground: '#fafafa',
                        card: { DEFAULT: '#111113', foreground: '#fafafa' },
                        primary: { DEFAULT: '#3b82f6', foreground: '#fafafa' },
                        secondary: { DEFAULT: '#1c1c1f', foreground: '#fafafa' },
                        muted: { DEFAULT: '#1c1c1f', foreground: '#71717a' },
                        accent: { DEFAULT: '#1c1c1f', foreground: '#fafafa' },
                        destructive: { DEFAULT: '#ef4444', foreground: '#fafafa' },
                        border: '#27272a',
                        input: '#1c1c1f',
                        ring: '#3b82f6',
                    },
                    borderRadius: {
                        lg: '0.5rem',
                        md: 'calc(0.5rem - 2px)',
                        sm: 'calc(0.5rem - 4px)',
                    },
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/css/dashboard.css" />
    <style>
        body { font-feature-settings: "rlig" 1, "calt" 1; }
        .nav-active { color: #fafafa !important; }
        .nav-active::after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 0;
            right: 0;
            height: 2px;
            background: #3b82f6;
            border-radius: 2px 2px 0 0;
        }
    </style>
</head>
<body class="bg-background text-foreground min-h-screen flex flex-col antialiased">

@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var userEmail = User.Identity?.Name ?? "";
    var userInitial = userEmail.Length > 0 ? userEmail[0].ToString().ToUpper() : "U";
}

<!-- Navbar -->
<nav class="sticky top-0 z-50 w-full border-b border-border bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
    <div class="flex h-14 items-center justify-between px-4 md:px-6 max-w-screen-2xl mx-auto">

        <!-- Logo -->
        <a href="/" class="flex items-center gap-2.5 font-semibold text-base text-foreground hover:opacity-80 transition-opacity shrink-0">
            <div class="w-7 h-7 bg-primary rounded-md flex items-center justify-center">
                <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                    <line x1="16" y1="13" x2="8" y2="13"/>
                    <line x1="16" y1="17" x2="8" y2="17"/>
                </svg>
            </div>
            LogForDev
        </a>

        <!-- Desktop Nav Links -->
        <div class="hidden md:flex items-center h-full gap-0.5 ml-6">
            <a href="/" class="relative px-3 py-1.5 text-sm transition-colors rounded-md
                @(currentAction == "Index" ? "text-foreground bg-secondary" : "text-muted-foreground hover:text-foreground hover:bg-secondary/60")">
                Dashboard
            </a>
            <a href="/Home/AppLogs" class="relative px-3 py-1.5 text-sm transition-colors rounded-md
                @(currentAction == "AppLogs" ? "text-foreground bg-secondary" : "text-muted-foreground hover:text-foreground hover:bg-secondary/60")">
                App Logs
            </a>
            <a href="/Home/Projects" class="relative px-3 py-1.5 text-sm transition-colors rounded-md
                @(currentAction == "Projects" ? "text-foreground bg-secondary" : "text-muted-foreground hover:text-foreground hover:bg-secondary/60")">
                Projects
            </a>
            <a href="/Home/Docs" class="relative px-3 py-1.5 text-sm transition-colors rounded-md
                @(currentAction == "Docs" ? "text-foreground bg-secondary" : "text-muted-foreground hover:text-foreground hover:bg-secondary/60")">
                Docs
            </a>
        </div>

        <!-- Right Side -->
        <div class="flex items-center gap-2 ml-auto">
            <!-- GitHub -->
            <a href="https://github.com/melihhopa633/LogForDev" target="_blank"
               class="hidden md:flex p-1.5 text-muted-foreground hover:text-foreground transition-colors rounded-md hover:bg-secondary/60"
               title="GitHub">
                <svg class="w-4.5 h-4.5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
            </a>

            <!-- User Avatar Dropdown -->
            <div class="relative" id="userMenu">
                <button onclick="toggleUserMenu()"
                        class="flex items-center gap-2 px-2 py-1.5 rounded-md hover:bg-secondary/60 transition-colors group">
                    <div class="w-7 h-7 rounded-full bg-primary/20 border border-primary/30 flex items-center justify-center text-xs font-semibold text-primary">
                        @userInitial
                    </div>
                    <svg class="w-3.5 h-3.5 text-muted-foreground group-hover:text-foreground transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="6 9 12 15 18 9"/>
                    </svg>
                </button>

                <!-- Dropdown -->
                <div id="userDropdown"
                     class="hidden absolute right-0 top-full mt-1.5 w-56 bg-card border border-border rounded-lg shadow-xl shadow-black/30 py-1 z-50">
                    <!-- User info -->
                    <div class="px-3 py-2.5 border-b border-border">
                        <div class="flex items-center gap-2.5">
                            <div class="w-8 h-8 rounded-full bg-primary/20 border border-primary/30 flex items-center justify-center text-sm font-semibold text-primary shrink-0">
                                @userInitial
                            </div>
                            <div class="min-w-0">
                                <p class="text-xs font-medium text-foreground truncate">@userEmail</p>
                                <p class="text-xs text-muted-foreground">Administrator</p>
                            </div>
                        </div>
                    </div>

                    <!-- Menu items -->
                    <div class="py-1">
                        <a href="/Home/Settings"
                           class="flex items-center gap-2.5 px-3 py-2 text-sm text-muted-foreground hover:text-foreground hover:bg-secondary/60 transition-colors">
                            <svg class="w-4 h-4 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="3"/>
                                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 2.83-2.83l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"/>
                            </svg>
                            Ayarlar
                        </a>
                    </div>

                    <div class="border-t border-border py-1">
                        <button onclick="logout()"
                                class="w-full flex items-center gap-2.5 px-3 py-2 text-sm text-destructive hover:text-destructive hover:bg-destructive/10 transition-colors">
                            <svg class="w-4 h-4 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                                <polyline points="16 17 21 12 16 7"/>
                                <line x1="21" y1="12" x2="9" y2="12"/>
                            </svg>
                            Çıkış Yap
                        </button>
                    </div>
                </div>
            </div>

            <!-- Mobile hamburger -->
            <button class="md:hidden p-1.5 text-muted-foreground hover:text-foreground transition-colors rounded-md hover:bg-secondary/60"
                    onclick="document.getElementById('mobileMenu').classList.toggle('hidden')">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="4" y1="12" x2="20" y2="12"/><line x1="4" y1="6" x2="20" y2="6"/><line x1="4" y1="18" x2="20" y2="18"/>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="hidden md:hidden border-t border-border px-4 py-3 space-y-0.5 bg-background">
        <a href="/" class="flex items-center px-3 py-2 text-sm rounded-md transition-colors @(currentAction == "Index" ? "bg-secondary text-foreground" : "text-muted-foreground hover:bg-secondary/60")">Dashboard</a>
        <a href="/Home/AppLogs" class="flex items-center px-3 py-2 text-sm rounded-md transition-colors @(currentAction == "AppLogs" ? "bg-secondary text-foreground" : "text-muted-foreground hover:bg-secondary/60")">App Logs</a>
        <a href="/Home/Projects" class="flex items-center px-3 py-2 text-sm rounded-md transition-colors @(currentAction == "Projects" ? "bg-secondary text-foreground" : "text-muted-foreground hover:bg-secondary/60")">Projects</a>
        <a href="/Home/Docs" class="flex items-center px-3 py-2 text-sm rounded-md transition-colors @(currentAction == "Docs" ? "bg-secondary text-foreground" : "text-muted-foreground hover:bg-secondary/60")">Docs</a>
        <div class="border-t border-border mt-2 pt-2">
            <a href="/Home/Settings" class="flex items-center px-3 py-2 text-sm rounded-md text-muted-foreground hover:bg-secondary/60">Ayarlar</a>
            <button onclick="logout()" class="w-full text-left flex items-center px-3 py-2 text-sm rounded-md text-destructive hover:bg-destructive/10">Çıkış Yap</button>
        </div>
    </div>
</nav>

<!-- Main Content -->
<main class="flex-1 w-full max-w-screen-2xl mx-auto px-4 md:px-6 py-6">
    @RenderBody()
</main>

<!-- Footer -->
<footer class="border-t border-border py-4 px-4">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-3 text-xs text-muted-foreground max-w-screen-2xl mx-auto px-2">
        <p>LogForDev &mdash; Open Source Logging System</p>
        <div class="flex items-center gap-3">
            <a href="https://github.com/melihhopa633/LogForDev" target="_blank" class="hover:text-foreground transition-colors">GitHub</a>
            <span class="text-border">·</span>
            <span>MIT License</span>
            <span class="text-border">·</span>
            <span>Made by <a href="https://github.com/melihhopa633" target="_blank" class="hover:text-foreground transition-colors">Melih Hopa</a></span>
        </div>
    </div>
</footer>

<script>
    function toggleUserMenu() {
        const dropdown = document.getElementById('userDropdown');
        dropdown.classList.toggle('hidden');
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
        const menu = document.getElementById('userMenu');
        if (menu && !menu.contains(e.target)) {
            document.getElementById('userDropdown')?.classList.add('hidden');
        }
    });

    async function logout() {
        try {
            const res = await fetch('/api/auth/logout', { method: 'POST' });
            if (res.ok) {
                window.location.href = '/login';
            }
        } catch {
            window.location.href = '/login';
        }
    }
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
