@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - LogForDev</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        background: '#09090b',
                        foreground: '#fafafa',
                        card: { DEFAULT: '#111113', foreground: '#fafafa' },
                        primary: { DEFAULT: '#3b82f6', foreground: '#fafafa' },
                        secondary: { DEFAULT: '#1c1c1f', foreground: '#fafafa' },
                        muted: { DEFAULT: '#1c1c1f', foreground: '#71717a' },
                        accent: { DEFAULT: '#1c1c1f', foreground: '#fafafa' },
                        destructive: { DEFAULT: '#ef4444', foreground: '#fafafa' },
                        border: '#27272a',
                        input: '#1c1c1f',
                        ring: '#3b82f6',
                    },
                    borderRadius: {
                        lg: '0.5rem',
                        md: 'calc(0.5rem - 2px)',
                        sm: 'calc(0.5rem - 4px)',
                    },
                }
            }
        }
    </script>
    <style>
        body { font-feature-settings: "rlig" 1, "calt" 1; }

        .spinner {
            border: 2px solid #27272a;
            border-top-color: #3b82f6;
            border-radius: 50%;
            width: 16px;
            height: 16px;
            animation: spin 0.8s linear infinite;
            display: inline-block;
            vertical-align: middle;
        }
        @@keyframes spin { to { transform: rotate(360deg); } }

        .log-entry {
            opacity: 0;
            animation: fadeSlide 0.4s ease-out forwards;
        }
        @@keyframes fadeSlide {
            from { opacity: 0; transform: translateY(6px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @@keyframes fadeUp {
            from { opacity: 0; transform: translateY(16px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-up { animation: fadeUp 0.5s ease-out both; }

        @@keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0; }
        }
        .cursor-blink { animation: blink 1.1s step-end infinite; }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus {
            -webkit-text-fill-color: #fafafa !important;
            -webkit-box-shadow: 0 0 0 100px #1c1c1f inset !important;
            border-color: #27272a !important;
            transition: background-color 5000s ease-in-out 0s;
        }

        .totp-box:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.15);
        }

        .btn-glow:hover:not(:disabled) {
            box-shadow: 0 0 24px rgba(59, 130, 246, 0.3);
        }

        .dot-grid {
            background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.04) 1px, transparent 0);
            background-size: 24px 24px;
        }
    </style>
</head>
<body class="bg-background text-foreground min-h-screen antialiased">

    <div class="min-h-screen grid grid-cols-1 lg:grid-cols-2">
        @await Html.PartialAsync("_LoginBranding")
        @await Html.PartialAsync("_LoginForm")
    </div>

    <script>
        // Password toggle
        function togglePassword() {
            const pw = document.getElementById('password');
            const icon = document.getElementById('eyeIcon');
            if (pw.type === 'password') {
                pw.type = 'text';
                icon.innerHTML = '<path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/><line x1="1" y1="1" x2="23" y2="23"/>';
            } else {
                pw.type = 'password';
                icon.innerHTML = '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/>';
            }
        }

        // TOTP 6-box logic
        const totpBoxes = document.querySelectorAll('.totp-box');
        const totpHidden = document.getElementById('totpCode');

        function syncTotp() {
            totpHidden.value = Array.from(totpBoxes).map(b => b.value).join('');
        }

        totpBoxes.forEach((box, i) => {
            box.addEventListener('input', () => {
                box.value = box.value.replace(/\D/g, '').slice(-1);
                if (box.value && i < 5) totpBoxes[i + 1].focus();
                syncTotp();
            });

            box.addEventListener('keydown', (e) => {
                if (e.key === 'Backspace' && !box.value && i > 0) {
                    totpBoxes[i - 1].focus();
                    totpBoxes[i - 1].value = '';
                    syncTotp();
                }
                if (e.key === 'ArrowLeft' && i > 0) { e.preventDefault(); totpBoxes[i - 1].focus(); }
                if (e.key === 'ArrowRight' && i < 5) { e.preventDefault(); totpBoxes[i + 1].focus(); }
            });

            box.addEventListener('paste', (e) => {
                e.preventDefault();
                const text = (e.clipboardData || window.clipboardData).getData('text').replace(/\D/g, '').slice(0, 6);
                text.split('').forEach((ch, j) => { if (totpBoxes[j]) totpBoxes[j].value = ch; });
                if (text.length > 0) totpBoxes[Math.min(text.length, 5)].focus();
                syncTotp();
            });

            box.addEventListener('focus', () => box.select());
        });

        // Test mode pre-fill
        @if (ViewBag.TestMode == true)
        {
            <text>
            '000000'.split('').forEach((c, i) => { totpBoxes[i].value = c; });
            syncTotp();
            </text>
        }

        // Error/loading helpers
        function showError(msg) {
            document.getElementById('errorText').textContent = msg;
            document.getElementById('errorMessage').classList.remove('hidden');
        }

        function hideError() {
            document.getElementById('errorMessage').classList.add('hidden');
        }

        function setLoading(on) {
            const btn = document.getElementById('submitBtn');
            document.getElementById('submitText').textContent = on ? 'Giriş yapılıyor...' : 'Giriş Yap';
            document.getElementById('submitSpinner').classList.toggle('hidden', !on);
            btn.disabled = on;
        }

        // Form submit
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            hideError();
            setLoading(true);

            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const totpCode = totpHidden.value.trim();
            const rememberMe = document.getElementById('rememberMe').checked;

            if (!/^\d{6}$/.test(totpCode)) {
                showError('Doğrulama kodu 6 haneli olmalıdır');
                setLoading(false);
                return;
            }

            try {
                const res = await fetch('/api/auth/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, password, totpCode, rememberMe })
                });
                const data = await res.json();
                if (data.success) {
                    // Hidden form trick: Chrome'un şifre kaydetme diyaloğunu tetikler
                    const f = document.createElement('form');
                    f.method = 'GET';
                    f.action = '/';
                    const u = document.createElement('input');
                    u.type = 'email'; u.name = 'email'; u.value = email; u.autocomplete = 'username';
                    const p = document.createElement('input');
                    p.type = 'password'; p.name = 'password'; p.value = password; p.autocomplete = 'current-password';
                    f.appendChild(u); f.appendChild(p);
                    document.body.appendChild(f);
                    f.submit();
                } else {
                    showError(data.error || 'Giriş başarısız oldu');
                    setLoading(false);
                }
            } catch (err) {
                console.error('Login error:', err);
                showError('Bir hata oluştu. Lütfen tekrar deneyin.');
                setLoading(false);
            }
        });

        // Auto-focus
        document.getElementById('email').focus();
    </script>
</body>
</html>
